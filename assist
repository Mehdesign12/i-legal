    <script>
        document.getElementById('launch-chatbot').addEventListener('click', function(event) {
            event.preventDefault();
            // Code pour afficher et lancer le chatbot
            var chatbotContainer = document.getElementById('chatbot-container');
            chatbotContainer.style.display = 'block';
            // Fonction pour initialiser le chatbot (à personnaliser selon votre implémentation)
            initChatbot(chatbotContainer);
        });

        function initChatbot(container) {
            // Exemple de fonction d'initialisation du chatbot
            // Remplacez ce code par le code spécifique de votre chatbot
            container.innerHTML = '<p>Chatbot lancé !</p>';
            // Insérer ici le code pour initialiser et configurer votre chatbot
        }
    </script>
