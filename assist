<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lanceur de Chatbot</title>
</head>
<body>
    <a href="#" id="launch-chatbot">Lancer le Chatbot</a>

    <!-- Conteneur pour le chatbot -->
    <div id="chatbot-container" style="display:none;"></div>

    <script>
        document.getElementById('launch-chatbot').addEventListener('click', function(event) {
            event.preventDefault();
            // Code pour afficher et lancer le chatbot
            var chatbotContainer = document.getElementById('chatbot-container');
            chatbotContainer.style.display = 'block';
            initChatbot();
        });

        function initChatbot() {
            // Code d'initialisation du chatbot Crisp
            window.$crisp=[];
            window.CRISP_WEBSITE_ID="2c852062-80aa-4870-b4c5-9c330b5fcc63";
            (function(){
                var d = document;
                var s = d.createElement("script");
                s.src = "https://client.crisp.chat/l.js";
                s.async = 1;
                d.getElementsByTagName("head")[0].appendChild(s);
            })();
        }
    </script>
</body>
</html>
